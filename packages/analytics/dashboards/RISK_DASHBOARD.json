  "filters": {
    "severity": "all",
    "category": "all",
    "status": "all",
    "owner": "all"
  },
  "alerts": [
    {
      "id": "new_critical_risk",
      "condition": "severity = CRITICAL AND created_date < 7 days",
      "severity": "critical",
      "notification": ["CEO", "CFO", "CTO", "Board"],
      "message": "New critical risk identified requiring immediate attention"
    },
    {
      "id": "risk_aging",
      "condition": "status = active AND days_open > 90",
      "severity": "warning",
      "notification": ["Risk Owner", "CFO"],
      "message": "Risk open for 90+ days without mitigation progress"
    },
    {
      "id": "mitigation_overdue",
      "condition": "mitigation_due_date < today AND mitigation_progress < 100",
      "severity": "warning",
      "notification": ["Risk Owner"],
      "message": "Risk mitigation overdue"
    }
  ],
  "notes": {
    "risk_appetite": "Conservative risk appetite during migration phase; zero tolerance for critical risks > 30 days",
    "escalation": "Critical risks escalated to CEO/Board within 24 hours; High risks reviewed weekly",
