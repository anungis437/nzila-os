  "filters": {
    "batch": "all",
    "complexity": "all",
    "profile": "all",
    "status": "all"
  },
  "alerts": [
    {
      "id": "extreme_platform_delay",
      "condition": "complexity = EXTREME AND weeks_elapsed > planned_weeks",
      "severity": "critical",
      "message": "EXTREME complexity platform exceeding timeline"
    },
    {
      "id": "backbone_delay",
      "condition": "backbone_phase_elapsed > 4 weeks",
      "severity": "warning",
      "message": "Backbone phase delay detected"
    },
    {
      "id": "data_migration_risk",
      "condition": "total_entities > 1000 AND data_volume_mb > 100",
      "severity": "warning",
      "message": "Large-scale data migration requires additional planning"
    }
  ],
