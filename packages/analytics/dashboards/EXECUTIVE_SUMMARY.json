{
  "dashboard_id": "executive_summary",
  "name": "Executive Summary Dashboard",
  "description": "High-level portfolio health metrics for C-suite and board members",
  "version": "1.0.0",
  "last_updated": "2026-02-17",
  "refresh_rate": "daily",
  "audience": ["CEO", "CFO", "CTO", "Board"],
  "sections": [
    {
      "section_id": "portfolio_overview",
      "title": "Portfolio Overview",
      "layout": "2x2",
      "widgets": [
        {
          "widget_id": "total_platforms",
          "type": "kpi",
          "title": "Total Platforms",
          "value": 15,
          "change": "+3",
          "change_period": "quarter",
          "target": 15,
          "format": "number",
          "color": "green"
        },
        {
          "widget_id": "business_verticals",
          "type": "kpi",
          "title": "Business Verticals",
          "value": 10,
          "change": "+2",
          "change_period": "quarter",
          "target": 10,
          "format": "number",
          "color": "green"
        },
        {
          "widget_id": "total_entities",
          "type": "kpi",
          "title": "Total Entities",
          "value": 12000,
          "change": "+4000",
          "change_period": "quarter",
          "target": 12000,
          "format": "number",
          "color": "green"
        },
        {
          "widget_id": "engineering_investment",
          "type": "kpi",
          "title": "Engineering Investment",
          "value": 4000000,
          "change": "+2050000",
          "change_period": "correction",
          "target": 4000000,
          "format": "currency",
          "color": "green"
        }
      ]
    },
    {
      "section_id": "financial_health",
      "title": "Financial Health",
      "layout": "2x2",
      "widgets": [
        {
          "widget_id": "arr_target_2026",
