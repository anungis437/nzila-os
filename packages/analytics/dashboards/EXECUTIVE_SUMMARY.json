  "filters": {
    "date_range": "quarter",
    "platform": "all",
    "vertical": "all"
  },
  "alerts": [
    {
      "id": "migration_risk",
      "condition": "migration_weeks > 12 AND risk_level = HIGH",
      "severity": "warning",
      "message": "Platform migration exceeds 12 weeks with high risk"
    },
    {
      "id": "arr_shortfall",
      "condition": "arr_progress < 50 AND quarter = Q2",
      "severity": "critical",
      "message": "ARR target at risk for current quarter"
    }
  ]
}
