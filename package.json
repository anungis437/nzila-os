{
  "name": "nzila-os",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@nzila/web",
    "dev:console": "turbo dev --filter=@nzila/console",
    "build": "turbo build",
    "build:web": "turbo build --filter=@nzila/web",
    "build:console": "turbo build --filter=@nzila/console",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "contract-tests": "vitest run --config tooling/contract-tests/vitest.config.ts",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "link": "pwsh -NoProfile -File scripts/link-workspaces.ps1"
  },
  "devDependencies": {
    "@tailwindcss/oxide": "^4.2.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
