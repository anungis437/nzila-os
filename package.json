{
  "name": "nzila-os",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@nzila/web",
    "dev:console": "turbo dev --filter=@nzila/console",
    "build": "turbo build",
    "build:web": "turbo build --filter=@nzila/web",
    "build:console": "turbo build --filter=@nzila/console",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:all": "vitest run",
    "test:coverage": "turbo test:coverage",
    "contract-tests": "vitest run --project contract-tests",
    "release": "changeset publish",
    "version-packages": "changeset version",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "secret-scan": "gitleaks detect --source . --config .gitleaks.toml --no-banner --verbose",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@tailwindcss/oxide": "^4.2.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.19.3",
    "turbo": "^2.8.10",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
