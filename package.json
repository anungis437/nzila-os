{
  "name": "nzila-os",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@nzila/web",
    "dev:console": "turbo dev --filter=@nzila/console",
    "dev:shop-quoter": "turbo dev --filter=@nzila/shop-quoter-app",
    "dev:docker": "turbo dev --filter=@nzila/web --filter=@nzila/console --filter=@nzila/partners --filter=@nzila/union-eyes --filter=@nzila/abr --continue",
    "build": "turbo build",
    "build:web": "turbo build --filter=@nzila/web...",
    "build:console": "turbo build --filter=@nzila/console...",
    "build:partners": "turbo build --filter=@nzila/partners...",
    "build:union-eyes": "turbo build --filter=@nzila/union-eyes...",
    "build:abr": "turbo build --filter=@nzila/abr...",
    "build:cfo": "turbo build --filter=@nzila/cfo...",
    "build:trade": "turbo build --filter=@nzila/trade...",
    "build:pondu": "turbo build --filter=@nzila/pondu...",
    "build:cora": "turbo build --filter=@nzila/cora...",
    "build:zonga": "turbo build --filter=@nzila/zonga...",
    "build:nacp-exams": "turbo build --filter=@nzila/nacp-exams...",
    "build:shop-quoter": "turbo build --filter=@nzila/shop-quoter-app...",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:all": "vitest run",
    "test:coverage": "turbo test:coverage",
    "contract-tests": "vitest run --project contract-tests",
    "contract:test": "vitest run --project contract-tests",
    "release": "changeset publish",
    "version-packages": "changeset version",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "secret-scan": "gitleaks detect --source . --config .gitleaks.toml --no-banner --verbose",
    "ga-check": "tsx tooling/ga-check/ga-check.ts",
    "redteam": "tsx security/redteam/profile-runner.ts",
    "redteam:core": "tsx security/redteam/profile-runner.ts --profile core",
    "redteam:abr": "tsx security/redteam/profile-runner.ts --profile abr-insights",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@tailwindcss/oxide": "^4.2.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.19.3",
    "turbo": "^2.8.10",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.9",
      "minimatch": ">=10.2.2",
      "cjs-module-lexer": ">=2.2.0",
      "jspdf": ">=4.2.0",
      "@firebase/util": ">=1.10.3",
      "eslint": "^9.39.0",
      "rollup": ">=4.59.0",
      "esbuild": ">=0.25.0"
    }
  }
}
