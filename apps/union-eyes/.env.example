# Django
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
PGHOST=localhost
PGDATABASE=nzila_union_eyes
PGUSER=postgres
PGPASSWORD=postgres
PGPORT=5432
PGSSLMODE=prefer

# Redis
REDIS_URL=redis://localhost:6379/0

# Clerk
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# Stripe (via Backbone)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Azure OpenAI (via Backbone)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Backbone API
BACKBONE_API_URL=http://localhost:8000
BACKBONE_API_KEY=

# Cron secret — used by scheduled jobs (rewards, billing, reminders)
# Generate with: openssl rand -hex 32
CRON_SECRET=

# Whop (membership checkout integration)
WHOP_API_KEY=
WHOP_PLAN_ID_MONTHLY=
WHOP_PLAN_ID_YEARLY=

# PayPal (payment webhook verification)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=

# App URL (used for social sharing, AI client, webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Evidence sealing — AES-256 key used to create HMAC seal envelopes.
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# REQUIRED in production. Rotation invalidates all existing seals.
EVIDENCE_SEAL_KEY=

# ──────────────────────────────────────────────────────────────────
# Authorization
# ──────────────────────────────────────────────────────────────────
# UUID of the super-admin organization. Used by role middleware to
# grant cross-org access. Generate with: uuidgen
SUPER_ADMIN_ORG_ID=

# ──────────────────────────────────────────────────────────────────
# Email (Resend)
# ──────────────────────────────────────────────────────────────────
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@example.com

# ──────────────────────────────────────────────────────────────────
# Push Notifications (Firebase Cloud Messaging)
# ──────────────────────────────────────────────────────────────────
# Set FCM_PROJECT_ID to enable mobile push. Requires firebase-admin
# package and a service-account JSON credential file.
FCM_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# ──────────────────────────────────────────────────────────────────
# SMS (Twilio)
# ──────────────────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ──────────────────────────────────────────────────────────────────
# Encryption (AES-256-GCM / Azure Key Vault)
# ──────────────────────────────────────────────────────────────────
# In production use Azure Key Vault (set AZURE_KEY_VAULT_URL).
# For local dev you can set a fallback key instead.
# Generate with: openssl rand -hex 32
AZURE_KEY_VAULT_URL=
FALLBACK_ENCRYPTION_KEY=
KEY_ROTATION_ENABLED=false

# ──────────────────────────────────────────────────────────────────
# Stripe Connect (stipend payouts)
# ──────────────────────────────────────────────────────────────────
# Enable Stripe Connect transfers for stipend disbursements.
# Requires the platform Stripe account to have Connect enabled.
STRIPE_CONNECT_ENABLED=false

# ──────────────────────────────────────────────────────────────────
# Platform Admin Bootstrap
# ──────────────────────────────────────────────────────────────────
# Comma-separated list of Clerk user IDs that receive app_owner role
# on first run, before any database role entries exist.
# Find your user_id in the Clerk Dashboard → Users.
# Usage: PLATFORM_ADMIN_USER_IDS=user_abc123,user_xyz789
PLATFORM_ADMIN_USER_IDS=
